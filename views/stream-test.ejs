<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>LiveKit Stream Test</title>

  <!-- Bootstrap (optional styling) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- LiveKit Client -->
  <script src="https://cdn.jsdelivr.net/npm/livekit-client@2.5.9/dist/livekit-client.umd.js"></script>

  <style>
    body {
      padding: 20px;
    }
    .video-container {
      margin: 10px;
      display: inline-block;
      max-width: 300px;
    }
    video {
      width: 100%;
      border-radius: 8px;
    }
  </style>
</head>
<body>

  <!-- Join Interface -->
  <div id="join">
    <h2>Stream Test: Join Room</h2>
    <div class="mb-3">
      <label for="participant-name">Participant Name</label>
      <input type="text" class="form-control" id="participant-name" placeholder="e.g. Viewer123" />
    </div>
    <div class="mb-3">
      <label for="room-name">Room Name</label>
      <input type="text" class="form-control" id="room-name" value="TestRoom" />
    </div>
    <button class="btn btn-success" id="join-button">Join Room</button>
  </div>

  <!-- Room View -->
  <div id="room" style="display:none;">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 id="room-title">Room</h2>
      <button class="btn btn-danger" onclick="leaveRoom()">Leave Room</button>
    </div>
    <div id="layout-container" class="d-flex flex-wrap"></div>
  </div>

  <!-- JS -->
  <script src="/js/stream-test.js"></script>
</body>
</html>
